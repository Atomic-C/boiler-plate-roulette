@model IEnumerable<BoilerPlateRouletteSolution.Models.NumberStats>
@* We have a list available because we pass it from  return View(objList); on NumberBetsController *@


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Display</h2>
        </div>
        <div class="col-6">

        </div>
    </div>

    <br/><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Number
                    </th>
                    <th>
                        Quantidade
                    </th>
                    <th>
                        Color
                    </th>
                    <th>
                        Even or Odd
                    </th>
                    <th>
                        Hot or Cold
                    </th>
                    <th>
                        Percentage
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Number</td>
                        <td width="50%">@item.Number</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No data available for display.</p>
    }

</div>

