@model IEnumerable<BoilerPlateRouletteSolution.Models.NumberStats>
@* We have a list available because we pass it from  return View(objList); on NumberBetsController *@


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Display</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="NumberBets" asp-action="InsertNumber" class="btn btn-primary">
                Insert Number
            </a>
        </div>
    </div>

    <br/><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Number
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Color
                    </th>
                    @*<th>
                        Even\Odd
                    </th>
                    <th>
                        Hot\Cold
                    </th>*@
                    <th>
                        Percentage
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Number</td>
                        <td width="50%">@item.Quantity</td>
                        <td width="50%">@item.Color</td>
                        @*<td width="50%">@item.EvenOdd</td>*@
                        @*<td width="50%">@item.HotCold</td>*@
                        <td width="50%">@item.Percentage</td>
                        <td class="w-75 btn-group" role="group">
                            <a asp-controller="NumberBets" asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary">
                                Edit
                            </a>
                            <a asp-controller="NumberBets" asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No data available for display.</p>
    }

</div>

